<!DOCTYPE html>
<html>
  <head>
    <title>Logbot | #<%= @channel %> | <%= user_nick(@msg) %>&gt; <%= user_text(@msg) %></title>
    <link rel="alternate" type="application/json+oembed"
      href="/oembed.json?url=<%= @url %>"
      title="<%= @title %>" />
    <link rel="alternate" type="text/xml+oembed"
      href="/oembed.xml?url=<%= @url %>"
      title="<%= @title %>" />
    <link rel="stylesheet" type="text/css" href="/assets/embed.css">
    <base target="_blank" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  </head>
  <body>
    <script src="http://code.jquery.com/jquery-1.8.3.min.js"></script>
    <script src="//cdn.jsdelivr.net/emojione/1.5.2/lib/js/emojione.min.js"></script>
    <link rel="stylesheet" href="//cdn.jsdelivr.net/emojione/1.5.2/assets/css/emojione.min.css"/>
    <script src="/assets/emoji.js"></script>
    <script>
      $(document).ready(function() {
        $(".msg").each(function() {
          var $this = $(this);
          $this.html(emoji($this.html()));
        });
      });
    </script>
    <%= erb :_embed %>
    <%= erb :_footer %>
  </body>
</html>
